{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox Developer - Incognito",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:8080/",
            "webRoot": "${workspaceFolder}",
            "clearConsoleOnReload": true,
            "firefoxArgs": [
                "-private"
            ],
            "log": {
                "fileName": "${workspaceFolder/log.txt",
                "fileLevel": {
                    "default": "Debug"
                },
                "consoleLevel": {
                    "PathConversion": "Debug",
                    "default": "Error"
                }
            }
        }
    ]
}